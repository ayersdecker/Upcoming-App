<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Upcoming.MainPage"
             Shell.NavBarHasShadow="False">

    <Grid BackgroundColor="#333">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Label Text="Upcoming" TextColor="#78f59b" FontAttributes="Bold" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="0"/>
            <ImageButton Source="search" BorderColor="#78f59b" Scale=".5" Grid.Column="1"/>
            <ImageButton Source="ham" Scale=".5"  Grid.Column="2"/>

        </Grid>

        <CollectionView Grid.Row="1"></CollectionView>

    </Grid>

</ContentPage>
